<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.ZhinengInfoDao">

    <select id="findByName" resultType="com.example.vo.ZhinengInfoVo">
        select `zhineng_info`.* from `zhineng_info`

        where 1 = 1
        <if test="name != null and name != '' and name != 'all'">
            and `zhineng_info`.`name` like concat('%', #{name}, '%')
        </if>
        order by `zhineng_info`.id
    </select>

    <select id="findVoById" resultType="com.example.vo.ZhinengInfoVo">
        select `zhineng_info`.* from `zhineng_info`

        where `zhineng_info`.id = #{id}
    </select>

    <select id="count">
        select count(id) from `zhineng_info`
    </select>


</mapper>