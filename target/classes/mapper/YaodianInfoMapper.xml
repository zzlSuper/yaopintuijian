<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.YaodianInfoDao">

    <select id="findByName" resultType="com.example.vo.YaodianInfoVo">
        select `yaodian_info`.* from `yaodian_info`

        where 1 = 1
        <if test="name != null and name != '' and name != 'all'">
            and `yaodian_info`.`name` like concat('%', #{name}, '%')
        </if>
        order by `yaodian_info`.id desc
    </select>

    <select id="findVoById" resultType="com.example.vo.YaodianInfoVo">
        select `yaodian_info`.* from `yaodian_info`

        where `yaodian_info`.id = #{id}
    </select>


</mapper>